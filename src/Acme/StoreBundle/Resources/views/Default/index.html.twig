{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block body %}
    {{ user.username }}<br>
    Nombre de jeu : {{ user.playerInfos |length }}
    <br>
    <br>
    {% for playerInfo in user.playerInfos %}
    {{ playerInfo.game.name }}<br>
        Scores : ({{  playerInfo.scores |length}}) (Best : {{ maxScore(playerInfo.scores)}}) <br>
        {% for score in playerInfo.scores %}
            {{ score.value ~ " points le " ~ score.date | date("d m Y h:i:s")}}<br>
        {% endfor %}
        <br>
        Badges : ({{  playerInfo.badges |length}})<br>
        {% for badge in playerInfo.badges %}
            {{ badge.name ~ " obtenu le " ~ badge.date | date("d m Y h:i:s")}}<br>
        {% endfor %}
        <br>
        <br>
    {% endfor %}
{% endblock %}



